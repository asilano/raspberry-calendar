# A sample Gemfile
source "https://rubygems.org"

# Runs the browser
gem 'watir-webdriver'

# Provide scheduled events, such as kicking a browser refresh
gem 'rufus-scheduler'

# Give smart number methods, like 1.week
gem 'activesupport'

# Convert ordinal strings ("thirteenth") to numbers (13)
gem 'deordinalize'

# Convert cardinal strings ("two thousand and seventeen") to numbers (2017)
gem 'numbers_in_words'